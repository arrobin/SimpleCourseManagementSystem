@{
    if (Session["UserDetailsId"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
    ViewBag.Title = "SCMS-Dashboard";
}

<div class="col-md-10">
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Total Course</div>
                </div>
                <div class="panel-body">
                    <h1>@ViewBag.totalCourse</h1>
                    <br /><br />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <div class="content-box-header">
                        <div class="panel-title">Total Batch</div>
                    </div>
                    <div class="content-box-large box-with-header">
                        <h1>@ViewBag.totalBatches</h1>
                        <br /><br />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="content-box-header">
                        <div class="panel-title">Total Trainee</div>
                    </div>
                    <div class="content-box-large box-with-header">
                        <h1>@ViewBag.totalTrainees</h1>
                        <br /><br />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 panel-warning">
            <div class="content-box-header panel-heading">
                <div class="panel-title ">Bar Chart</div>                
            </div>
            <div class="content-box-large box-with-header">
                <div id="divBarChart" style="width: 700px; height: 550px; margin: 0 auto">
                </div>
                <br /><br />
            </div>
        </div>
    </div>
</div>
