@model IEnumerable<SimpleCourseManagement.Models.Batch>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-10">

    <div class="content-box-large">
        <div class="panel-heading">
            <div class="panel-title">All Batch List</div>
        </div>
        <div class="panel-body">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
                <thead>
                    <tr>
                        <th>Batch Codee</th>
                        <th>Course Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Time</th>
                        <th>Course Fee</th>
                        <th>Total Seat</th>
                        <th>User</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td class="">@Html.DisplayFor(modelItem => item.BatchCode)</td>
                            <td class="">@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                            <td class="">@Html.DisplayFor(modelItem => item.StartDate)</td>
                            <td class="">@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td class="">@Html.DisplayFor(modelItem => item.Time)</td>
                            <td class="">@Html.DisplayFor(modelItem => item.CourseFee)</td>
                            <td>@Html.DisplayFor(modelItem => item.TotalSeat)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserDetail.UserName)</td>
                            <td><a class="btn btn-primary btn-sm" href=@Url.Action("Edit","Batches",new { id = item.BatchId })>Update</a></td>
                        </tr>
                                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

